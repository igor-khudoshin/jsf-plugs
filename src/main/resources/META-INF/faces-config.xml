<?xml version='1.0' encoding='UTF-8'?>
<faces-config version="2.0"
              xmlns="http://java.sun.com/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd">

    <name>JavaplugsJSF</name>
    
    <converter>
        <converter-id>jsfplugs.Instant</converter-id>
        <converter-class>org.github.javaplugs.jsf.InstantConverter</converter-class>
        <attribute>            
            <attribute-name>formatter</attribute-name>            
            <attribute-class>java.lang.String</attribute-class>        
        </attribute>
    </converter>
    <converter>
        <converter-id>jsfplugs.LocalDate</converter-id>
        <converter-class>org.github.javaplugs.jsf.LocalDateConverter</converter-class>
        <attribute>            
            <attribute-name>formatter</attribute-name>            
            <attribute-class>java.lang.String</attribute-class>        
        </attribute>
    </converter>
    <converter>
        <converter-id>jsfplugs.LocalDateTime</converter-id>
        <converter-class>org.github.javaplugs.jsf.LocalDateTimeConverter</converter-class>
        <attribute>            
            <attribute-name>formatter</attribute-name>            
            <attribute-class>java.lang.String</attribute-class>        
        </attribute>
    </converter>
    <converter>
        <converter-id>jsfplugs.LocalTime</converter-id>
        <converter-class>org.github.javaplugs.jsf.LocalTimeConverter</converter-class>
        <attribute>            
            <attribute-name>formatter</attribute-name>            
            <attribute-class>java.lang.String</attribute-class>        
        </attribute>
    </converter>
    <converter>
        <converter-id>jsfplugs.OffsetDateTime</converter-id>
        <converter-class>org.github.javaplugs.jsf.OffsetDateTimeConverterr</converter-class>
        <attribute>            
            <attribute-name>formatter</attribute-name>            
            <attribute-class>java.lang.String</attribute-class>        
        </attribute>
    </converter>
    <converter>
        <converter-id>jsfplugs.ZonedDateTime</converter-id>
        <converter-class>org.github.javaplugs.jsf.ZonedDateTimeConverter</converter-class>
        <attribute>
            <attribute-name>formatter</attribute-name>
            <attribute-class>java.lang.String</attribute-class>
        </attribute>
    </converter>
</faces-config>